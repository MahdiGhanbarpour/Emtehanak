<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KhwarazmiApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:listDivider">@color/transparent_color_5_percent</item>
    </style>

    <style name="Theme.KhwarazmiApp" parent="Base.Theme.KhwarazmiApp" />

    <style name="TextInputLayoutPlaceHolderTextTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">13sp</item>
    </style>
</resources>