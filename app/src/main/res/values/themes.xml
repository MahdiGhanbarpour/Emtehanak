<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KhwarazmiApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/student_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/iran_sans</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="android:textColorHighlight">@color/text_highlight_color</item>
        <item name="snackbarStyle">@style/SnackBarTheme</item>
    </style>

    <style name="Theme.KhwarazmiApp" parent="Base.Theme.KhwarazmiApp" />

    <style name="CustomTextInputLayoutPlaceHolderTextTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="CustomTextInputLayoutTeacherTheme" parent="CustomTextInputLayoutPlaceHolderTextTheme">
        <item name="android:textSize">13sp</item>
        <item name="boxStrokeColor">@color/teacher_color</item>
        <item name="hintTextColor">@color/teacher_color</item>
    </style>

    <style name="CustomHintTextAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="CustomTeacherSwitchTheme" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="colorSurface">@color/gray_light</item>
        <item name="colorSecondary">@color/teacher_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomAutoCompleteTextViewTeacherTheme" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/teacher_color</item>
        <item name="hintTextColor">@color/teacher_color</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomErrorTextAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="NavigationTheme" parent="Base.Theme.KhwarazmiApp">
        <item name="listPreferredItemHeightSmall">54dp</item>
    </style>

    <style name="SnackBarTheme" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="SmallLineBgColor">
        <item name="android:background">@color/transparent_color_5_percent</item>
    </style>
</resources>